.form

    &--thin
        min-width 400px // make it mobile fraindly
        margin auto

    &__header
        padding-bottom 0.5rem

    &__group
        margin-top 1rem
        position relative

        &--has-error
            input
                border-color $error-color

    &__input-label
        padding-bottom 0.5rem
        display block
        width 100%
        box-sizing border-box
        text-transform uppercase
        font-size 0.75rem
        letter-spacing 1px
        $headlineFontStyles()

    &__error-text
        display inline-block
        position absolute
        top 0
        right 0
        font-size 0.75rem
        line-height 1
        margin-top 0.25rem
        color $error-color

    .textbox,
    .textarea
        padding 0.75rem
        font-size 1rem
        width 100%
        box-sizing border-box
        border 1px solid $grey-color
        outline none
        transition border-color 0.15s

        &:hover
            border-color darken($highlight-color, 30%)
        &:focus
            border-color $highlight-color

    .checkbox
        font-size 0.85rem

    .btn--link
        display block
        font-size 0.65rem
        margin-top 0.75rem
        color $primary-color


