@require '_variables'

body
    color $text-color
    background-color $background-color
    font-size 18px
    $defaultFontStyles()

#main
    height 100vh
    align-items center
    display flex
    justify-content center

h1
    color $primary-color
    font-size 3rem
    $headlineFontStyles()
    margin 0
    line-height 1

p
    color $highlight-color
    margin 0
    padding-left 1.5rem
